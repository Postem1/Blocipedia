<h1><%= @user.email %></h1>

<div class="row">

  <div class="col-md-8">
    <p><%= @user.email %></p>
  </div>

  <div class="col-md-4">
  </div>
</div>

<% if current_user.admin? %>
  <%= link_to "Delete User", @user, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this user?'} unless @user == @current_user  %>
<% end %>
