
<h1><%= markdown(@wiki.title) %></h1>

<div class="row">

  <div class="col-md-8">
    <p><%= markdown(@wiki.body) %></p>
    <p><strong>Created by <%= @wiki.user.email %></strong></p>
  </div>

  <div class="col-md-4">
    <div class="see_collaborators">
      <% if @wiki.user == current_user || current_user.admin? %>
        <% if Collaborator.exists?(wiki_id: @wiki) %>
          <%= render partial: 'collaborators/users' %>
        <% end %>
      <% end %>
    </div>

    <div class="edits">
      <% if @wiki.private == false || (current_user.admin? || @wiki.user_id == current_user.id || @wiki.collaborators.include?(user_id: current_user.id)) %>
        <%= link_to "Edit Wiki", edit_wiki_path(@wiki), class: 'btn btn-success' %>
      <% end %>

      <% if current_user.admin? || (@wiki.user_id == current_user.id) %>
        <%= link_to "Delete Wiki", @wiki, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this wiki?'} %>
      <% end %>
    </div>
  </div>
</div>
